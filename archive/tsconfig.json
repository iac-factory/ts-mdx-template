{
    "ts-node": {
        "files": true,
        "transpileOnly": true,
        "preferTsExts": true
    },
    "compilerOptions": {
        "target": "ESNext",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "module": "ESNext",
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "noEmit": true,
        "jsx": "react-jsxdev"
    },
    "include": [
        "src",
        "**/*.ts"
    ],
    "exclude": ["node_modules"]
}
